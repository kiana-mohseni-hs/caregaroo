<%= form_for Post.new do |f| %>
  <div class="field">
    <%= f.label :content, "Share latest update with memeber of your community" %><br />
    <%= f.text_area :content, :size => "60x1"%>
  </div>
  <div class="actions">
    <%= f.submit "Update", :class =>"orange_button", :id=>"update_button"%>
  </div>
  <hr color="#cccccc"/>
<% end %>
