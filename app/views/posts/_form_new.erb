<%= form_for Post.new do |f| %>
  <div class="field">
    <%= f.text_area :content, :size => "53x1", :title => "Share news with your network...", :class => "news_textarea" %>
  </div>
  <div class="actions">
    <%= f.submit "Update", :class =>"form_button", :id=>"update_button"%>
  </div>
  <hr color="#cccccc"/>
<% end %>
