<% if !@user.nil? %>
  <a class="large_avatar" href="<%= @user.avatar_url(:large).to_s%>"><%= image_tag @user.avatar_url(:thumb).to_s, :alt => @user.first_name, :class=>"profile_user_pic", :height => "50", :width => "50" %></a>
  <p class="name_text"><%= @user.first_name %> <%= @user.last_name %> <%= relationship_in_parenthesis(@user, @user.network_id) %></p><br/>
  <% if @is_current_user %>
    <%= render 'sub_nav' %>
  <% end %>
  
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
  <% if !@user.nil? %>
    <p class="sub_header">BASICS</p>
    <% if @user.id == @current_user.id %>
    <div style="float:right"><%= link_to "Edit Profile", edit_info_profile_path, :class=>"orange_button_link"%></div>
    <% end %>
    <div class="clear"></div>
    <div class="profile_content">
      <div class="left_text">Name:</div><div class="right_text"><%= @user.first_name %> <%= @user.last_name %></div><br/>
      <div class="left_text">Email:</div><div class="right_text"><%= @user.email %></div><br/>    
      <% if !@user.profile.nil? %>
      <div class="left_text">Location:</div><div class="right_text"><%= @user.profile.location %></div><br/>
      <div class="left_text">Time Zone:</div><div class="right_text"><%= @user.time_zone %></div><br/>
      <div class="left_text">About me:</div><div style="font-size:12px;margin-left:100px"><%= @user.profile.bio %></div><br/>
      <div class="clear"></div>
      <% end%>
    </div>

    <% if @is_current_user && !@user.notification.nil? %>
      <p class="sub_header">SEND ME A NOTIFICATION:</p>
      <div class="profile_content">
      <div class="row_space"><div class="left_text">When Caregaroo Team has an announcement about the site</div>
        <div><%= check_box_tag 'announcement', true, (@user.notification.announcement ? true : false), :disabled => true, :style => "float:right" %></div></div>
      <div class="row_space"><div class="left_text">When someone posts an update or comment</div>
        <div><%= check_box_tag 'post_update', true, (@user.notification.post_update ? true : false), :disabled => true, :style => "float:right" %></div></div>
      </div>
    <% end %>
    <% if @is_current_user %>
      <p class="sub_header">SEND ME REMINDERS:</p>
      <div class="profile_content"> 
        <div class="row_space">
          <div class="left_text">Send me reminders for Calendar events I am participating in.</div>
        </div>
        <div class="left_text">Reminders:</div>

        <div id="reminders-container">
          <div id="no-reminders" <%=  raw('style="display:none"') unless @user_reminder_settings.empty? %> >
            No reminders set  
          </div>
          
          <div id="user_reminder_settings">
            <%= render @user_reminder_settings %>
          </div>

          <a id="add_user_reminder" href="#" <%= raw('style="display:none"') if @user_reminder_settings.size > 4  %> >
            Add a reminder
          </a>

          <%= render partial: "user_reminder_settings/form" %>
        </div>
      </div>

    <% end %>

    
  <% else %>
    <p>There's no profile.</p>
  <% end %>
  <% if !@user.profile.nil? %>
    <p class="sub_header">CONTACT</p>
      <div class="profile_content">
        <div class="left_text">Home Phone:</div><div class="right_text"><%= @user.profile.phone_home %></div><br/>
      <div class="left_text">Work Phone:</div><div class="right_text"><%= @user.profile.phone_work %> ext <%= @user.profile.phone_work_ext %></div><br/>
      <div class="left_text">Mobile Phone:</div><div class="right_text"><%= @user.profile.phone_mobile %></div><br/>
      </div>
  <% end %>
<% else %>
  <p>Profile not found.</p>
<% end %>


  