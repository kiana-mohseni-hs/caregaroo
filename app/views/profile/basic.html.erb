<% if !@user.nil? %>
	<%= image_tag "photo_place_holder.png", :alt => @user.first_name, :class=>"profile_user_pic" %>
	<p class="name_text"><%= @user.first_name %> <%= @user.last_name %> (<%= @user.network_relationship %>)</p><br/>
<% end %>


<%= form_for @current_user, :url => update_info_profile_path, :method => :post, :html => { :id => 'update_info_form' } do |f| %>
  <%= render "shared/error_messages", :target => @current_user %>
  
  <h3 class="page_title" >My account settings</h3>
  <br/>
  <p class="sub_header">BASICS</p>
  <hr/>
  <div class="row_space"><div class="left_text"><%= f.label :first_name, 'First Name:'%> </div><div class="right_text"><%= f.text_field :first_name, :size=>35 %>  </div></div>
  <div class="row_space"><div class="left_text"><%= f.label :last_name, 'Last Name:'%> </div><div class="right_text"><%= f.text_field :last_name, :size=>35 %>  </div></div>
  <div class="row_space"><div class="left_text"><%= f.label :email, 'Email:'%> </div><div class="right_text"><%= f.text_field :email, :size=>35 %>  </div></div>
  
  <br/>
  <p class="sub_header">PASSWORD</p>
  <hr/>
  <div class="left_text"><%= f.label :password, 'Old Password:'%> </div><div class="right_text_2"><%= f.text_field :password, :size=>26 %>  
  	<a href="/password_resets/new" class="forgot_pw_link"><span class="orange_text" >Forgotten password?</span></a></div><br/>
  <div class="left_text"><%= f.label :password, 'New Password:'%> </div><div class="right_text_2"><%= f.text_field :password, :size=>26 %>  </div><br />
  <div class="left_text"><%= f.label :password_confirmation, 'Confirm New Password:'%> </div><div class="right_text_2"><%= f.text_field :password_confirmation, :size=>26 %>  </div><br />

  
  <div class="actions">
    <%= f.submit "Save Updates", :class =>"form_button", :id=>"save_updates_button"%>
  </div>
<% end %>

