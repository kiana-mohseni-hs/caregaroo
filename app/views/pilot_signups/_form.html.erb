<%= form_for(@pilot_signup) do |f| %>
  <%= render "shared/error_messages", :target => @pilot_signup %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :signup_type %><br />
    <%= f.text_field :signup_type %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
