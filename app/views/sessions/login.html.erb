<div style="display:block">
	<div style="display:inline-block">
	<h3>Sign in</h3>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
	<%= render "shared/error_messages", :target => @session %>  
	<%= form_for @session, :url => sessions_path, :method => :post, :html => { :id => 'login_form' } do |f| %>
		<div class="field">
		    <%= f.label :email %>
		    <%= f.text_field :email %>
	  	</div>
		<div class="field">
		    <%= f.label :password %>
		    <%= f.password_field :password %>
		</div>
		<p><%= link_to "forgotten password?", new_password_reset_path %></p>
		<div class="field">
		    <%= f.check_box :remember_me %>
		    <%= label_tag :remember_me %>
		</div>
		<div class="actions"><%= submit_tag "Log in" %></div>
	<% end %>
	</div>
	<div style="display:inline-block; width:200px; vertical-align:top; margin-left:100px;">
		<p style="padding:10px 0;">Don't have an account</p>
		<p style="padding:10px 0;">Sign up and create a network around your loved one to share news, feel connected and get help</p>
		<p><%= link_to "Sign up", register_path %></p>
	</div>
</div>