<ul id="members">
	<% for user in @members %>
     <li class = "member">
      	<%= image_tag "photo_place_holder.png", :alt => user.first_name, :height => "44", :width => "50", :style => "float:left;padding-right:5px" %>
      	<div class="member_info">
      		<span class="name_text"><%=h user.first_name %> <%=h user.last_name %>: <%=h user.network_relationship %>
      		</span><br/>
      		<div class="role_line">
      		<% if @current_user.is_initiator_or_coordinator? && !user.is_initiator? %>
				<%= link_to 'Remove', members_delete_path(user.id), :confirm => 'Are you sure?', :method => :delete %>
			<% end %>
			<% if @current_user.is_initiator_or_coordinator? && !user.is_initiator? %>
				<%= check_box_tag  "coordinator_#{user.id}", user.id, user.is_coordinator?, { :class => 'coordinator', 'data-href' => members_update_path(user.id), 'data-method' => 'put' } %> Coordinator
			<% else %>            
				<%= user.role %>
			<% end %>
			</div>
		</div>
		<hr color="#cccccc"/>
	</li>
    <% end %>	
</ul>