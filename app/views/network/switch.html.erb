<h3 class="page_title">My Networks</h3>

<%= render "shared/error_messages", target: @current_user %>
<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, id: "flash_#{name}" %>
<% end %>

<p class="sub_header_tall">SWITCH NETWORK</p>
<div style="width:450px">
<%= form_for @current_user, url: network_switch_save_path do |f| %>
<p>You belong to the following networks. Select the network you would like to switch to now:</p><br/>

<% @current_user.networks.each do |n| %>
  <p><%= f.radio_button :network_id, n.id, style: "display:inline;" %>
  <%= f.label :network, "#{n.name} - #{n.network_for_who}", value: n.id, style: "display:inline;" %></p>
<% end %>

<p style="padding:30px 0"><%= f.submit "Switch Network Now", class: "form_button" %></p>
</div>
<% end %>

<p class="sub_header_tall">CREATE NEW NETWORK</p>
<div style="width:450px">
<%= form_for @current_user, url: register_new_path, method: "post" do |f| %>
<p>You can create a brand new network for someone else who needs care.</p>

<p style="padding:30px 0"><%= f.submit "Create New Network", class: "form_button" %></p>
</div>
<% end %>
