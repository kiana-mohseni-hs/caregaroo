<div id="reset_pw_box" >
	<h3 class="page_title">Forgot your password?</h3>
	<p>Enter your email address below and we will send you password reset instructions.</p>
	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	<%= form_tag password_resets_path, :method => :post do %>
	  <div class="field">
	    <%= label_tag :email, "Email", :class=>"pw_reset_label_text" %>
	    <%= text_field_tag :email, params[:email] , :size=>35 %>
	    <div>
	    <%= submit_tag "Reset Password", :id=>"reset_pw_btn", :class=>"form_button" %>
	    </div>
	  </div>
	<% end %>
</div>
