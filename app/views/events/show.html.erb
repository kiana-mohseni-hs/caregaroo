<p id="notice"><%= notice %></p>

<div class="event_top_bar"><%= link_to 'Show Events', events_path, class: "orange_button_link" %>
<%= link_to 'Edit', edit_event_path(@event), class: "orange_button_link" %>
<%= link_to "Delete", cancel_event_url(@event), method: :delete, confirm: "Delete event: are you sure?", title: "delete", class: "orange_button_link" %></div>
<div id="event_show">
<%= image_tag @creator.avatar_url(:thumb).to_s, :alt => @creator.first_name, :height => "44", :width => "50", :style => "float:left;padding-right:5px" %>

<h4 class="event_view_name"><%= @event.name %> <%= @event_type %></h4>
<%= render :partial => 'dateandtime' %>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Participants:</b>
  <% userslastindex = @event.users.size - 1 %>
  <% @event.users.each_with_index do |u, index| %>
  <em><%= u.first_name %> <%= u.last_name %></em><%= ", " unless index == userslastindex %>
  <% end %>
</p>

<p>Comments (<span id="event_comments_count"><%= @event.comments.count %></span>)</p>
<ul id="event_comments">
  <%= render partial: "comment", collection: @event.comments %>
  <%= form_for( @comment, remote: true, format: 'js', html: {id: "new_event_comment"}) do |f| %>
    <input name="within_event" type="hidden" value="true" />
    <%= f.hidden_field :post_id, value: @event.post_id %>
    <%= f.text_field :content, placeholder: "Share a comment", size: 65 %>
    <%= f.submit value: "Comment", class: "orange_button_link" %>
  <% end %>
</ul>
</div>